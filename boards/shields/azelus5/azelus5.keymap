        };
    };



    position_map {
        compatible = "zmk,physical-layout-position-map";
        complete;
        layout1: layout1 {
            physical-layout = <&physical_layout0>;
            positions = <                LN2                   RN2                >
                       ,<LT6 LT5 LT4 LT3 LT2 LT1           RT1 RT2 RT3 RT4 RT5 RT6>
                       ,<LM6 LM5 LM4 LM3 LM2 LM1           RM1 RM2 RM3 RM4 RM5 RM6>
                       ,<LB6 LB5 LB4 LB3 LB2 LB1           RB1 RB2 RB3 RB4 RB5 RB6>
                       ,<        LH4 LH3 LH2 LH1 LH0   RH0 RH1 RH2 RH3 RH4        >
            ;
        };
    };


    combos {
        compatible = "zmk,combos";

        BASE_UNDERSCORE {
            bindings = <&kp LS(DE_MINUS)>;
            key-positions = <RB3 RB4>;
            layers = <COLEMAK ANYMAK TESTS>;
            timeout-ms = <COMBO_TIMEOUT>;
        };

        COLEMAK_OE {
            bindings = <&kp DE_O_UMLAUT>;
            key-positions = <RM4 RM5>;
            layers = <COLEMAK>;
            timeout-ms = <COMBO_TIMEOUT>;
        };

        SYM_PROZENT {
            bindings = <&kp DE_PRCNT>;
            key-positions = <LT4 LT3>;
            layers = <SYM>;
            timeout-ms = <COMBO_TIMEOUT>;
        };
    };

